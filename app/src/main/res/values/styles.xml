<resources>

    <style name="titleNormalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textMain</item>
        <item name="android:textSize">@dimen/textTitle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titleSubNormalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textTitleSub</item>
        <item name="android:textSize">@dimen/textTitleSub</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="contextMenuTextView" parent="titleNormalTextView">
        <item name="android:minWidth">160dp</item>
        <item name="android:textColor">@color/textMainAnti</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="horizontalDividerLine">
        <item name="android:background">#34ffffff</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="checkboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:layout_width">@dimen/listIconNormal</item>
        <item name="android:layout_height">@dimen/listIconNormal</item>
    </style>

    <style name="titleSmallTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textTitleSub</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="browserBottomTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textTitle</item>
        <item name="android:textSize">@dimen/textTitle</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/selector_round_dark_corner_small</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="button">
        <item name="android:textColor">@color/textTitle</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="dialogButton">
        <item name="android:textColor">@color/textMainAnti</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="LoadingProgressBar">
        <item name="android:indeterminateDrawable">@drawable/loading_progress</item>
        <item name="android:minWidth">76dip</item>
        <item name="android:maxWidth">76dip</item>
        <item name="android:minHeight">76dip</item>
        <item name="android:maxHeight">76dip</item>
    </style>
</resources>
